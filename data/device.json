{
 "config": "config.live.json",
 "title": "{{LangOptions1}}",
 "content": [
  {
   "type": "link",
   "title": "{{LangDevices}}",
   "action": "/",
   "class": "btn btn-block btn-danger"
  },
  {
   "type": "link",
   "title": "{{LangSetting3}}",
   "action": "/setup.htm",
   "class": "btn btn-block btn-default"
  },
  {
   "type": "h2",
   "title": "{{LangDevice}}",
   "module": "device"
  },
  {
   "type": "input",
   "title": "{{LangDevice}}",
   "name":"ssdp",
   "module": "device",
   "state": "{{SSDP}}",
   "style": "width:50%;display:inline",
   "pattern": "[0-9a-zA-Zа-яА-Я.\\- ]{1,20}"
  },
  {
   "type": "input",
   "title": "{{LangSpace}}",
   "name":"space",
   "module": "device",
   "state": "{{space}}",
   "style": "width:50%;display:inline",
   "pattern": "[0-9a-zA-Zа-яА-Я.\\- ]{1,20}"
  },
  {
   "type": "button",
   "title": "{{LangSave}}",
   "module": "device",
   "action": "ssdp=[[ssdp]]&space=[[space]]",
   "state": "response",
   "class": "btn btn-block btn-success"
  },
  {
   "type": "h2",
   "title": "{{LangGMT1}}"
  },
  {
   "type": "link",
   "title": "{{LangGMT2}}",
   "action": "javascript:set_time_zone(this);",
   "class": "btn btn-block btn-primary"
  },
  {
   "type": "chart",
   "title": "{{LangChart}}",
   "name": "analog-chat",
   "module": "analog",
   "state": "analog.json",
   "action": "/chart.htm#analog",
   "style": "height:200px;margin-left:-20px"
  },
  {
   "type": "text",
   "title": "{{LangIfttt1}}",
   "class": "alert alert-info"
  },
  {
   "type": "tables",
   "title": "{{LangTimer}}",
   "module": "timers",
   "state": "timers.save.json",
   "class": "table table-striped table-hover",
   "style": "width:100%;"
  },
  {
   "type": "select",
   "title": "{{LangDay}}",
   "module": "day",
   "state": [
    {
     "{{LangMon}}": "Mon",
     "{{LangTue}}": "Tue"
    }
   ],
   "class": "btn btn-default form-control"
  },
  {
   "type": "wifi",
   "title": "{{ssid}}",
   "module": "wifi"
  },
  {
   "type": "checkbox",
   "title": "Задать статический IP",
   "name":"checkboxIP",
   "module": "checkboxIP",
   "state": "{{checkboxIP}}",
   "action": "val('checkboxIP',(this.checked?'1':'0'));toggle('static-ip');"
  },
  {
   "type": "text",
   "name": "static-ip",
   "title": "test",
   "class": "hidden"
  },
  {
   "type": "password",
   "title": "{{LangPass}}",
   "module": "ssidPass",
   "state": "{{ssidPass}}"
  }
 ]
}
