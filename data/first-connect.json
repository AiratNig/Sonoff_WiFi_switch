{
 "config": "config.live.json",
 "lang": "/lang/lang.{{lang}}.json",
 "title": "",
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content": [
  {
   "type": "h5",
   "title": "{{SSDP}}",
   "class":"alert-danger"
  },
  {
   "type": "select",
   "state": "{{lang}}",
   "name": "languages",
   "action": "/lang?set=[[languages]]",
   "style": "margin-top:-47px;float:right;width:70px",
   "title": {"ru":"RU","en":"EN","lv":"LV"}
  },




  {
   "type": "h2",
   "title": "{{LangDevice}}",
   "module": "device"
  },
  {
   "type": "input",
   "title": "{{LangDevice}}",
   "name":"ssdp",
   "module": "device",
   "state": "{{SSDP}}",
   "style": "width:50%;display:inline",
   "pattern": "[0-9a-zA-Zа-яА-Я.\\- ]{1,20}"
  },
  {
   "type": "input",
   "title": "{{LangSpace}}",
   "name":"space",
   "module": "device",
   "state": "{{space}}",
   "style": "width:50%;display:inline",
   "pattern": "[0-9a-zA-Zа-яА-Я.\\- ]{1,20}"
  },
  {
   "type": "button",
   "title": "{{LangSave}}",
   "module": "",
   "action": "device?ssdp=[[ssdp]]&space=[[space]]",
   "state": "response",
   "class": "btn btn-block btn-success"
  },


  {
   "type": "hr"
  },


  {
   "type": "text",
   "title": "{{LangWiFi3}}",
   "class": "alert alert-dismissible alert-danger"
  },





  {
   "type": "h2",
   "title": "{{LangWiFi2}}",
   "module": "wifi"
  },
  {
   "type": "wifi",
   "module":"wifi",
   "title":"{{LangWiFi1}}",
   "name":"ssid",
   "state": "{{ssid}}",
   "pattern": ".{1,20}"
  },
  {
   "type": "password",
   "module":"wifi",
   "title": "{{LangDevice}}",
   "name":"ssidPass",
   "state": "{{ssidPass}}",
   "pattern": ".{8,20}"
  },




  {
   "type": "button",
   "module":"",
   "title": "{{LangSave}}",
   "state": "response",
   "class": "btn btn-block btn-success",
   "action": "ssid?ssid=[[ssid]]&ssidPass=[[ssidPass]]&checkboxIP=0"
  },


  {
   "type": "hr"
  },



  {
   "type": "link",
   "title": "{{LangReset1}}",
   "action": "javascript:first_restart(this,'{{LangReset3}}');",
   "class": "btn btn-block btn-warning"
  }
 ]
}
