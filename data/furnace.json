{
 "configs":[
  "/config.live.json",
  "/config.options.json",
  "/lang/lang.{{lang}}.json",
  "/modules.json"
 ],
 "title":"{{LangOptions1}}",
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content":[
  {
   "type":"h5",
   "title":"{{SSDP}}",
   "class":"alert-info"
  },

  {
   "type": "loadJson",
   "state": "header.json"
  },

  {
   "type":"button",
   "title":"&#8657; 1",
   "response":"[[furnace0]]",
   "action":"furnace 0 on 0-1-2-3",
   "class":"'btn btn-block btn-lg btn-primary",
   "style": "width:50%;display:inline-block"
  },
  {
   "type":"button",
   "title":"&#8657; 2",
   "response":"[[furnace1]]",
   "action":"furnace 0 on 0-1-2-3",
   "class":"'btn btn-block btn-lg btn-primary",
   "style": "width:50%;display:inline-block"
  },

  {
   "type":"h4",
   "name":"furnace0",
   "title":"{{stateFurnace0}}",
   "style": "text-align: center;width:50%;display:inline-block"
  },
  {
   "type":"h4",
   "name":"furnace1",
   "title":"{{stateFurnace1}}",
   "style": "text-align: center;width:50%;display:inline-block"
  },
  {
   "type":"button",
   "title":"&#8659; 1",
   "response":"[[furnace0]]",
   "action":"furnace 0 on 0-1-2-3",
   "class":"'btn btn-block btn-lg btn-primary",
   "style": "width:50%;display:inline-block"
  },




  {
   "type":"button",
   "title":"&#8659; 2",
   "response":"[[furnace1]]",
   "action":"furnace 0 on 0-1-2-3",
   "class":"'btn btn-block btn-lg btn-primary",
   "style": "width:50%;display:inline-block"
  },

  {
   "type":"hr"
  },

  {
   "type":"range",
   "title":"Furnace 1",
   "name":"furnace-rate-1",
   "state":"{{stateFurnace}}",
   "response":"[[furnace-rate-1]]",
   "action":"furnace 1 [[furnace-rate-1]]",
   "pattern":"min=0 max=3 step=1"
  },
  {
   "type":"range",
   "title":"Furnace 2",
   "name":"furnace-rate-2",
   "state":"{{stateFurnace2}}",
   "response":"[[furnace-rate-2]]",
   "action":"furnace 1 [[furnace-rate-2]]",
   "pattern":"min=0 max=3 step=1"
  },


  {
   "type":"hr"
  },



  {
   "type":"link",
   "title":"<i class=\"opt-img\"></i> {{LangSetting3}}",
   "action":"/page.htm?setup",
   "class":"btn btn-block btn-default"
  }
 ]
}
