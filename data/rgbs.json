{
 "configs":[
  "/config.live.json",
  "/config.options.json",
  "/lang/lang.{{lang}}.json",
  "/modules.json"
 ],
 "title":"{{LangOptions1}}",
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content":[
  {
   "type":"h5",
   "title":"{{SSDP}}",
   "class":"alert-info"
  },
  {
   "type":"select",
   "state":"{{lang}}",
   "name":"languages",
   "action":"/lang?set=[[languages]]",
   "response":"page.htm?{{urlArray0}}",
   "style":"margin-top:-47px;float:right;width:70px",
   "title":{"ru":"RU","en":"EN","lv":"LV","ua":"UA"}
  },
  {
   "type":"link",
   "title":"{{LangDevices}}",
   "action":"/",
   "class":"btn btn-block btn-danger"
  },
  {
   "type": "link",
   "title": "<i class=\"set-img\"></i>{{LangOptions1}} RGB",
   "module": "rgb",
   "action": "/page.htm?rgb",
   "class": "btn btn-block btn-default"
  },
  {
   "type":"link",
   "title":"<i class=\"set-img\"></i>{{LangOptions1}} Relay",
   "module":"relay",
   "action":"/page.htm?relay",
   "class":"btn btn-block btn-default"
  },
  {
   "type":"link",
   "title":"<i class=\"set-img\"></i>{{LangOptions1}} Jalousie",
   "module":"jalousie",
   "action":"/page.htm?jalousie",
   "class":"btn btn-block btn-default"
  },
  {
   "type":"link",
   "title":"<i class=\"opt-img\"></i> {{LangSetting3}}",
   "action":"/page.htm?setup",
   "class":"btn btn-block btn-default"
  },
  {
   "type":"hr"
  },
  {
   "type":"text",
   "module":"ddns",
   "title":"{{LangIfttt1}}",
   "class":"alert alert-info"
  },

  {
   "type":"range",
   "title":"R",
   "name":"colorR",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs on [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"G",
   "name":"colorG",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs on [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"B",
   "name":"colorB",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs on [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"hr"
  },
  {
   "type":"range",
   "title":"{{LengBrightness}}",
   "name":"brightness",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs on [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },



  {
   "type":"button",
   "title":"({{stateRGB}}?'{{LangOff}}':'{{LangOn}}')",
   "name":"rgb",
   "response":"[[rgb]]",
   "action":"rgbs not",
   "class":"'btn btn-block btn-lg btn-'+({{stateRGB}}?'info':'primary')"
  },
  {
   "type":"hr",
   "module":"timers"
  },


  {
   "type":"h2",
   "module":"timers",
   "title":"{{LangTimer}}"
  },
  {
   "type":"table",
   "module":"timers",
   "state":"timer.save.json",
   "title":{
    "module":"",
    "trigger":"{{LangOnM}}/{{LangOffM}}",
    "day":"{{LangDay}}",
    "time":"{{LangTime4}}",
    "work":"{{LangWorkTime}}"
   },
   "class":"table alert alert-dismissible alert-warning",
   "style":"width:100%;"
  },
  {
   "type":"link",
   "module":"timers",
   "title":"{{LangTimer}}",
   "action":"page.htm?timer",
   "class":"btn btn-block btn-default"
  },


  {
   "type":"hr"
  },


  {
   "type":"chart",
   "title":"{{LangAnalog}}",
   "state":"analog.json",
   "module":"analog",
   "action":"/page.htm?chart&analog",
   "style":"height:200px;margin-left:-20px"
  },
  {
   "type":"chart",
   "title":"{{LangTemperature}}",
   "state":"temperature.json",
   "module":"temperature",
   "action":"/page.htm?chart&temperature",
   "style":"height:200px;margin-left:-20px"
  },
  {
   "type":"chart",
   "title":"{{LangHumidity}}",
   "state":"humidity.json",
   "module":"humidity",
   "action":"/page.htm?chart&humidity",
   "style":"height:200px;margin-left:-20px"
  },

  {
   "type":"link",
   "title":"<i class=\"opt-img\"></i> {{LangSetting3}}",
   "action":"/page.htm?setup",
   "class":"btn btn-block btn-default"
  }
 ]
}
